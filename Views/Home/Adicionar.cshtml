@model Tarefa

<h2>Nova Tarefa</h2>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Adicionar" asp-controller="Home" method="post">

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label">Descrição</label>
        <input asp-for="Descricao" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="CategoriaId" class="form-label">Categoria:</label>
        <select asp-for="CategoriaId"
                class="form-select"
                asp-items="@(new SelectList(ViewBag.Categorias, "CategoriaId", "Nome"))" required>
            <option value="">Selecione uma categoria</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="DataDeVencimento" class="form-label">Data De Vencimento</label>
        <input type="text" asp-for="DataDeVencimento" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="StatusId" class="form-label">Situação:</label>
        <select asp-for="StatusId"
                class="form-select"
                asp-items="@(new SelectList(ViewBag.Status, "StatusId", "Nome"))">
        
        </select>
    </div>

    <div class="row">
        <div class="col-md-6 ">
            <button type="submit" class="btn btn-primary ">Adicionar</button>
        </div>
        <div class="col-md-6">
            <a asp-action="Index" asp-route-id="" class="btn btn-primary">Cancelar</a>
        </div>
    </div>

</form>